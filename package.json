{
  "name": "@khalidsaidi/slugshade",
  "version": "0.1.0",
  "description": "SlugShade - cyber-native, Unicode-first slug engine (AI-native trace + optional AI hook).",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/khalidsaidi/slugshade.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "slug",
    "slugify",
    "unicode",
    "i18n",
    "transliteration",
    "ai",
    "url",
    "cyber"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./presets": {
      "import": {
        "types": "./dist/presets.d.ts",
        "default": "./dist/presets.js"
      },
      "require": {
        "types": "./dist/presets.d.cts",
        "default": "./dist/presets.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "llms.txt"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "chaos:user": "bash ./scripts/chaos-user-first-run.sh",
    "lint": "eslint .",
    "format": "prettier -w .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "publint": "publint",
    "prepublishOnly": "npm run lint && npm run typecheck && npm run test && npm run build && npm run publint"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/node": "^24.9.1",
    "eslint": "^9.38.0",
    "prettier": "^3.6.2",
    "publint": "^0.3.15",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "vitest": "^4.0.7"
  }
}
